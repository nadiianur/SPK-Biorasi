    <div class="row g-0 vh-100">
        <div class="col-md-6 p-4 ps-md-0 d-flex flex-column justify-content-center">
            <div class="main">
                <div class="header-text mb-5">
                    <h2 class="judul-txt">
                        Selamat Datang Kembali Kepala Bagian!</h2>
                </div>
                <h5 class="mt-5 fw-bold">NIP</h5>
                <form action="/loginKabag" , method="post">

                    <div class="input-group mb-4" style="width: 100%;">
                        <input type="text" class="input-txt form-control form-control-lg fs-6 rounded-4"
                            placeholder="Ketikkan NIP disini" id="nip">
                    </div>
                    <h5 class="fw-bold">Password</h5>
                    <div class="input-group mb-1" style="width: 100%;">
                        <div class="d-flex" style="width: 500%;">
                            <input type="password" class="input-txt form-control form-control-lg fs-6 rounded-4"
                            placeholder="Ketikkan password disini" id="password">
                            <i class="far fa-eye" id="togglePassword"
                                style="margin-left: -40px; cursor: pointer; margin-top: 16px; color: #8d9298;"></i>
                        </div>
                    </div>
                    <div class="input-group mt-4 mb-3 justify-content-center">
                        <button class="btn btn-lg fs-6" type="submit"
                            style="background-color: #FA5F00;border-radius: 30px;color: white;width: 100px; font-weight:800;">Log
                            In</button>
                    </div>
                </form>
            </div>
        </div>

